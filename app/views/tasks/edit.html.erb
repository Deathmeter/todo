<%= form_for([@project, @project.tasks.update]) do |f| %>
  
<p>
  <strong>Name:</strong>
  <%= task.name %>
</p>
 <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
<p>
  <strong>Status:</strong>     
  <%= task.status %>
</p>
<p>
    <%= f.label :status%><br>
    <%= f.text_area :status %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<p>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Delete Task', [task.project, task],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>