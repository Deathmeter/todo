<body class="gradient">
<h1>Edit Task </h1>

<%= form_for([@project, @task]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "project_name", 
    :placeholder => "Start typing here to create a task..."  %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= f.text_area :status %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', project_path(@project) %>
</body>