<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
 
 
<h2>Tasks</h2>
<%= render @project.tasks %>
 
<h2>Add task:</h2>
<%= form_for([@project, @project.tasks.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.text_area :status %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


 
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>